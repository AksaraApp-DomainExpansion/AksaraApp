<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AksaraApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/light_coral</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="BottomAppBarColor" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="colorPrimary">@color/light_coral</item>
    </style>

    <style name="Theme.AksaraApp" parent="Base.Theme.AksaraApp" />

    <style name="CustomOutlinedTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
            <item name="windowSplashScreenBackground">@color/app_bg</item>
            <item name="windowSplashScreenAnimatedIcon">@drawable/pic_splash_screen2</item>
            <item name="postSplashScreenTheme">@style/Theme.AksaraApp</item>
    </style>

</resources>